{"ast":null,"code":"// @ is an alias to /src\nimport PostIt from \"@/components/PostIt.vue\";\nimport AddModale from \"@/components/AddModale.vue\";\nexport default {\n  name: \"HomeView\",\n  components: {\n    PostIt,\n    AddModale\n  },\n\n  data() {\n    return {\n      id: 1,\n      posts: [],\n      showAddModale: false,\n      newTitle: \"\",\n      newContent: \"\"\n    };\n  },\n\n  methods: {\n    deletePostIt(id) {\n      this.posts = this.posts.filter(p => p.id != id);\n    },\n\n    showPostIt(id) {\n      this.$router.push({\n        name: \"detail\",\n        params: {\n          id: id\n        }\n      });\n    },\n\n    addPostIt() {\n      this.showAddModale = false;\n      this.posts.push({\n        id: this.id++,\n        title: this.newTitle,\n        content: this.newContent\n      });\n      this.newTitle = \"\";\n      this.newContent = \"\";\n    },\n\n    updateTitle(id, newTitle) {\n      let index = this.posts.findIndex(function (post) {\n        post.id == id;\n      });\n      this.posts[index].title = newTitle;\n    },\n\n    updateContent(id, newContent) {\n      let index = this.posts.findIndex(function (post) {\n        post.id == id;\n      });\n      this.posts[index].title = newContent;\n    },\n\n    toggleAddModale() {\n      this.showAddModale = !this.showAddModale;\n    }\n\n  },\n  watch: {\n    posts: {\n      handler(newPosts) {\n        localStorage.posts = JSON.stringify(newPosts);\n      },\n\n      deep: true\n    },\n    id: {\n      handler(newId) {\n        localStorage.id = newId;\n      }\n\n    }\n  },\n\n  mounted() {\n    if (localStorage.posts) {\n      this.posts = JSON.parse(localStorage.posts);\n    }\n\n    if (localStorage.id) {\n      this.id = localStorage.id;\n    }\n  }\n\n};","map":{"version":3,"mappings":"AACA;AACA,OAAOA,MAAP,MAAmB,yBAAnB;AACA,OAAOC,SAAP,MAAsB,4BAAtB;AAEA,eAAe;AACbC,MAAI,EAAE,UADO;AAEbC,YAAU,EAAE;AACVH,UADU;AAEVC;AAFU,GAFC;;AAMbG,MAAI,GAAG;AACL,WAAO;AACLC,QAAE,EAAE,CADC;AAELC,WAAK