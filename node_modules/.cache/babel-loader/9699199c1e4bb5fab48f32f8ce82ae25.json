gify","deep","newId","mounted","parse"],"sourceRoot":"","sources":["/home/fdizes/Rendu/C-DEV-121-PAR-1-2-postit-florent.dizes/post-it/src/views/HomeView.vue"],"sourcesContent":["<script>\n// @ is an alias to /src\nimport PostIt from \"@/components/PostIt.vue\";\nimport AddModale from \"@/components/AddModale.vue\";\n\nexport default {\n  name: \"HomeView\",\n  components: {\n    PostIt,\n    AddModale,\n  },\n  data() {\n    return {\n      id: 1,\n      posts: [],\n      showAddModale: false,\n      newTitle: \"\",\n      newContent: \"\",\n    };\n  },\n  methods: {\n    deletePostIt(id) {\n      this.posts = this.posts.filter((p) => p.id != id);\n    },\n    showPostIt(id) {\n      this.$router.push({\n        name: \"detail\",\n        params: { id: id },\n      });\n    },\n    addPostIt() {\n      this.showAddModale = false;\n      this.posts.push({\n        id: this.id++,\n        title: this.newTitle,\n        content: this.newContent,\n      });\n      this.newTitle = \"\";\n      this.newContent = \"\";\n    },\n    updateTitle(id, newTitle) {\n      let index = this.posts.findIndex(function (post) {\n        post.id == id;\n      });\n      this.posts[index].title = newTitle;\n    },\n    updateContent(id, newContent) {\n      let index = this.posts.findIndex(function (post) {\n        post.id == id;\n      });\n      this.posts[index].title = newContent;\n    },\n    toggleAddModale() {\n      this.showAddModale = !this.showAddModale;\n    },\n  },\n  watch: {\n    posts: {\n      handler(newPosts) {\n        localStorage.posts = JSON.stringify(newPosts);\n      },\n      deep: true,\n    },\n    id: {\n      handler(newId) {\n        localStorage.id = newId;\n      },\n    },\n  },\n  mounted() {\n    if (localStorage.posts) {\n      this.posts = JSON.parse(localStorage.posts);\n    }\n    if (localStorage.id) {\n      this.id = localStorage.id;\n    }\n  },\n};\n</script>\n\n<template>\n  <div class=\"container my-5\">\n    <AddModale\n      :showAddModale=\"showAddModale\"\n      :toggleAddModale=\"toggleAddModale\"\n      v-model:newTitle=\"newTitle\"\n      v-model:newContent=\"newContent\"\n      @submitData=\"addPostIt\"\n    />\n    <div @click=\"toggleAddModale\" class=\"btn btn-light\">Add Post-It</div>\n  </div>\n  <div class=\"postits\">\n    <PostIt\n      v-for=\"post in posts\"\n      :key=\"post.id\"\n      :id=\"post.id\"\n      :title=\"post.title\"\n      :content=\"post.content\"\n      @updateTitle=\"updateTitle\"\n      @updateContent=\"updateContent\"\n      @deletePostIt=\"deletePostIt\"\n      @showPostIt=\"showPostIt\"\n    />\n  </div>\n</template>\n\n<style scoped>\n.postits {\n  display: flex;\n  flex-wrap: wrap;\n}\n</style>\n\n\n"]},"metadata":{},"sourceType":"module"}