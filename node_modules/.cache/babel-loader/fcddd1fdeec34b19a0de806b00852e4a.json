e: \"DetailView\",\n  data() {\n    return {\n      id: this.$route.params.id,\n      post: {},\n      tempTitle: \"\",\n      tempContent: \"\",\n    };\n  },\n  emits: [\"deletePostIt\", \"updateTitle\", \"updateContent\"],\n  created() {\n    if (localStorage.posts) {\n      let posts = JSON.parse(localStorage.posts);\n      let index = posts.findIndex((post) => {\n        return post.id == this.id;\n      });\n      console.log(index);\n      this.post = posts[index];\n      this.tempTitle = posts[index].title;\n      this.tempContent = posts[index].content;\n    }\n  },\n};\n</script>\n\n<template>\n  <div class=\"container\">\n    <!-- <PostIt :id=\"post.id\" :title=\"post.title\" :content=\"post.content\" />\n  <p>id = {{ this.id }}</p>\n  <p>title = {{ this.post.title }}</p> -->\n    <div class=\"postIt\">\n      <!-- <h1 contenteditable=\"true\" @blur=\"$emit('updateTitle', id, $this.value)\">\n      {{ title }}\n    </h1> -->\n      <textarea\n        class=\"title\"\n        spellcheck=\"false\"\n        v-model=\"tempTitle\"\n        @blur=\"$emit('updateTitle', id, this.tempTitle)\"\n      />\n      <!-- <p contenteditable=\"true\" @blur=\"$emit('updateContent', id, $this.value)\">\n      {{ content }}\n    </p> -->\n      <textarea\n        class=\"content\"\n        spellcheck=\"false\"\n        v-model=\"tempContent\"\n        @blur=\"$emit('updateContent', id, this.tempContent)\"\n      />\n      <!-- <button @click=\"$emit('deletePostIt', id)\" class=\"del btn btn-outline-dark\">\n      x\n    </button>\n    <button @click=\"$emit('showPostIt', id)\" class=\"show btn btn-outline-dark\">\n      Show\n    </button> -->\n\n      <svg\n        class=\"delbtn\"\n        @click=\"$emit('deletePostIt', id)\"\n        xmlns=\"http://www.w3.org/2000/svg\"\n        viewBox=\"0 0 448 512\"\n      >\n        <!--! Font Awesome Pro 6.1.1 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license (Commercial License) Copyright 2022 Fonticons, Inc. -->\n        <path\n          d=\"M135.2 17.69C140.6 6.848 151.7 0 163.8 0H284.2C296.3 0 307.4 6.848 312.8 17.69L320 32H416C433.7 32 448 46.33 448 64C448 81.67 433.7 96 416 96H32C14.33 96 0 81.67 0 64C0 46.33 14.33 32 32 32H128L135.2 17.69zM31.1 128H416V448C416 483.3 387.3 512 352 512H95.1C60.65 512 31.1 483.3 31.1 448V128zM111.1 208V432C111.1 440.8 119.2 448 127.1 448C136.8 448 143.1 440.8 143.1 432V208C143.1 199.2 136.8 192 127.1 192C119.2 192 111.1 199.2 111.1 208zM207.1 208V432C207.1 440.8 215.2 448 223.1 448C232.8 448 240 440.8 240 432V208C240 199.2 232.8 192 223.1 192C215.2 192 207.1 199.2 207.1 208zM304 208V432C304 440.8 311.2 448 320 448C328.8 448 336 440.8 336 432V208C336 199.2 328.8 192 320 192C311.2 192 304 199.2 304 208z\"\n        />\n      </svg>\n    </div>\n  </div>\n</template>\n\n<style scoped>\n.container {\n  width: 100vw;\n  height: 100vh;\n  display: block;\n  margin-top: 50px;\n  align-items: center;\n  text-align: center;\n}\n.postIt {\n  width: 500px;\n  height: 700px;\n  margin: auto;\n  background-color: rgb(194, 59, 228, 0.9);\n  box-shadow: 5px 5px 10px rgb(0, 0, 0);\n  position: relative;\n}\n.title {\n  box-sizing: border-box;\n  height: 100px;\n  width: 100%;\n  padding: 10px 40px 10px 15px;\n  font-weight: 700;\n  text-align: center;\n  font-size: 21px;\n  font-style: italic;\n  background: none;\n  outline: none;\n  border-style: none;\n  resize: none;\n  overflow: hidden;\n}\n.content {\n  box-sizing: border-box;\n  height: 150px;\n  width: 100%;\n  padding: 5px 15px;\n  background: none;\n  outline: none;\n  border-style: none;\n  resize: none;\n  overflow: hidden;\n}\n\n.delbtn {\n  position: absolute;\n  bottom: 10px;\n  right: 10px;\n  width: 30px;\n  height: 30px;\n  cursor: pointer;\n}\n</style>\n\n\n\n"]},"metadata":{},"sourceType":"module"}