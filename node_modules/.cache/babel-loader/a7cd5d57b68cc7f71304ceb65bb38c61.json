}),\n        headers: headersPost,\n        cache: \"default\"\n      };\n      fetch(\"http://5.135.119.239:3090/notes/\", initPost).then(res => res.json()).then(data => {\n        console.log(data);\n        let post = {\n          id: data.note_id,\n          title: this.newTitle,\n          content: this.newContent\n        };\n        this.posts.push(post);\n        this.newTitle = \"\";\n        this.newContent = \"\";\n      });\n    },\n\n    updatePost(post) {\n      let headersPut = new Headers({\n        \"Content-Type\": \"application/json\"\n      });\n      let initPut = {\n        method: \"PUT\",\n        body: JSON.stringify({\n          title: post.title,\n          content: [post.Content]\n        }),\n        headers: headersPut,\n        cache: \"default\"\n      };\n      fetch(\"http://5.135.119.239:3090/notes/\" + post.id, initPut).then(res => res.json()).then(data => {\n        console.log(data);\n      });\n    },\n\n    updateTitle(id, newTitle) {\n      let index = this.posts.findIndex(function (post) {\n        return post.id == id;\n      });\n\n      if (index >= 0) {\n        updatePost(this.posts(index));\n        this.posts[index].title = newTitle;\n      }\n    },\n\n    updateContent(id, newContent) {\n      let index = this.posts.findIndex(function (post) {\n        return post.id == id;\n      });\n      this.posts[index].content = newContent;\n    },\n\n    toggleAddModale() {\n      this.showAddModale = !this.showAddModale;\n      this.newTitle = \"\";\n      this.newContent = \"\";\n    }\n\n  },\n  watch: {\n    posts: {\n      handler(newPosts) {\n        localStorage.posts = JSON.stringify(newPosts);\n      },\n\n      deep: true\n    },\n    id: {\n      handler(newId) {\n        localStorage.id = newId;\n      }\n\n    }\n  },\n\n  mounted() {\n    // if (localStorage.posts) {\n    //   this.posts = JSON.parse(localStorage.posts);\n    // }\n    // if (localStorage.id) {\n    //   this.id = localStorage.id;\n    // }\n    let headersGet = new Headers({\n      \"Content-Type\": \"application/json\"\n    });\n    let initGet = {\n      method: \"GET\",\n      headers: headersGet,\n      mode: \"cors\",\n      cache: \"default\"\n    };\n    fetch(\"http://5.135.119.239:3090/notes\", initGet).then(res => res.json()).then(data => {\n      console.log(data);\n      data.notes.forEach(d => {\n        let text = \"\";\n\n        if (d.content.length > 1) {\n          d.content.forEach(c => text += c + \". \");\n        } else {\n          text = d.content[0];\n        }\n\n        let post = {\n          id: d._id,\n          title: d.title,\n          content: text\n        };\n        this.posts.push(post);\n      });\n    });\n  }\n\n};","map":{"version":3,"mappings":"AACA;AACA,OAAOA,MAAP,MAAmB,yBAAnB;AACA,OAAOC,SAAP,MAAsB,4BAAtB;AAEA,eAAe;AACbC,MAAI,EAAE,UADO;AAEbC,YAAU,EAAE;AACVH,UADU;AAEVC;AAFU,GAFC;;AAMbG,MAAI,GAAG;AACL,WAAO;AACLC,WAAK,EAAE,EADF;AAELC,mBAAa,EAAE,KAFV;AAGLC,cAAQ,EAAE,EAHL;AAILC,gBAAU,EAAE,EAJP;AAKLC,gBAAU,EAAGC,IAAD,IAAU;AACpB,YAAIC,UAAS,GAAI,IAAIC,OAAJ,CAAY;AAC3B,0BAAgB;AADW,SAAZ,CAAjB;AAGA,YAAIC,OAAM,GAAI;AACZC,gBAAM,EAAE,KADI;AAEZC,cAAI,EAAEC,IAAI,CAACC,SAAL,CAAe;AACnBC,iBAAK,EAAER,IAAI,CAACQ,KADO;AAEnBC,mBAAO,EAAE,CAACT,IAAI,CAACU,OAAN;AAFU,WAAf,CAFM;AAMZC,iBAAO,EAAEV,UANG;AAOZW,eAAK,EAAE;AAPK,SAAd;AAUAC,aAAK,CAAC,qCAAqCb,IAAI,CAACc,EAA3C,EAA+CX,OAA/C,CAAL,CACGY,IADH,CACSC,GAAD,IAASA,GAAG,CAACC,IAAJ,EADjB,EAEGF,IAFH,CAESrB,IAAD,IAAU;AACdwB,iBAAO,CAACC,GAAR,CAAYzB,IAAZ;AACD,SAJH;AAKD;AAxBI,KAAP;AA0BD,GAjCY;;AAkCb0B,SAAO,EAAE;AACPC,gBAAY,CAACP,EAAD,EAAK;AACf,UAAIQ,aAAY,GAAI,IAAIpB,OAAJ,CAAY;AAC9B,wBAAgB;AADc,OAAZ,CAApB;AAGA,UAAIqB,UAAS,GAAI;AACfnB,cAAM,EAAE,QADO;AAEfO,eAAO,EAAEW,aAFM;AAGfV,aAAK,EAAE;AAHQ,OAAjB;AAMAC,WAAK,CAAC,qCAAqCC,EAAtC,EAA0CS,UAA1C,CAAL,CACGR,IADH,CACSC,GAAD,IAASA,GAAG,CAACC,IAAJ,EADjB,EAEGF,IAFH,CAESrB,IAAD,IAAU;AACdwB,eAAO,CAACC,GAAR,CAAYzB,IAAZ;AACA,aAAKC,KAAL,GAAa,KAAKA,KAAL,CAAW6B,MAAX,CAAmBxB,IAAD,IAAUA,IAAI,CAACc,EAAL,IAAWA,EAAvC,CAAb;A