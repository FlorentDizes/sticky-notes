rt HelloWorld from '@/components/HelloWorld.vue'\n//import PostIt from \"@/components/PostIt.vue\";\n\nexport default {\n  name: \"DetailView\",\n  data() {\n    return {\n      id: this.$route.params.id,\n      post: {},\n      tempTitle: \"\",\n      tempContent: \"\",\n    };\n  },\n  emits: [\"deletePostIt\", \"updateTitle\", \"updateContent\"],\n  created() {\n    if (localStorage.posts) {\n      let posts = JSON.parse(localStorage.posts);\n      console.log(posts);\n      let index = posts.findIndex((post) => {\n        return parseInt(post.id) == parseInt(this.id);\n      });\n      console.log(index);\n      this.post = posts[index];\n      this.tempTitle = posts[index].title;\n      this.tempContent = posts[index].content;\n    }\n  },\n};\n</script>\n\n<template>\n  <div class=\"container\">\n    <!-- <PostIt :id=\"post.id\" :title=\"post.title\" :content=\"post.content\" />\n  <p>id = {{ this.id }}</p>\n  <p>title = {{ this.post.title }}</p> -->\n    <div class=\"postIt\">\n      <!-- <h1 contenteditable=\"true\" @blur=\"$emit('updateTitle', id, $this.value)\">\n      {{ title }}\n    </h1> -->\n      <textarea\n        class=\"title\"\n        spellcheck=\"false\"\n        v-model=\"tempTitle\"\n        @blur=\"$emit('updateTitle', id, this.tempTitle)\"\n      />\n      <!-- <p contenteditable=\"true\" @blur=\"$emit('updateContent', id, $this.value)\">\n      {{ content }}\n    </p> -->\n      <textarea\n        class=\"content\"\n        spellcheck=\"false\"\n        v-model=\"tempContent\"\n        @blur=\"$emit('updateContent', id, this.tempContent)\"\n      />\n      <!-- <button @click=\"$emit('deletePostIt', id)\" class=\"del btn btn-outline-dark\">\n      x\n    </button>\n    <button @click=\"$emit('showPostIt', id)\" class=\"show btn btn-outline-dark\">\n      Show\n    </button> -->\n      <svg\n        class=\"delbtn\"\n        @click=\"$emit('deletePostIt', id)\"\n        xmlns=\"http://www.w3.org/2000/svg\"\n        viewBox=\"0 0 448 512\"\n      >\n        <!--! Font Awesome Pro 6.1.1 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license (Commercial License) Copyright 2022 Fonticons, Inc. -->\n        <path\n          d=\"M384 32C419.3 32 448 60.65 448 96V416C448 451.3 419.3 480 384 480H64C28.65 480 0 451.3 0 416V96C0 60.65 28.65 32 64 32H384zM143 208.1L190.1 255.1L143 303C133.7 312.4 133.7 327.6 143 336.1C152.4 346.3 167.6 346.3 176.1 336.1L223.1 289.9L271 336.1C280.4 346.3 295.6 346.3 304.1 336.1C314.3 327.6 314.3 312.4 304.1 303L257.9 255.1L304.1 208.1C314.3 199.6 314.3 184.4 304.1 175C295.6 165.7 280.4 165.7 271 175L223.1 222.1L176.1 175C167.6 165.7 152.4 165.7 143 175C133.7 184.4 133.7 199.6 143 208.1V208.1z\"\n        />\n      </svg>\n    </div>\n  </div>\n</template>\n\n<style scoped>\n.container {\n  width: 100vw;\n  height: 100vh;\n  display: block;\n  margin-top: 50px;\n  align-items: center;\n  text-align: center;\n}\n.postIt {\n  width: 500px;\n  height: 700px;\n  margin: auto;\n  background-color: rgb(194, 59, 228, 0.9);\n  box-shadow: 5px 5px 10px rgb(0, 0, 0);\n  position: relative;\n}\n.title {\n  box-sizing: border-box;\n  height: 100px;\n  width: 100%;\n  padding: 10px 40px 10px 15px;\n  font-weight: 700;\n  text-align: center;\n  font-size: 21px;\n  font-style: italic;\n  background: none;\n  outline: none;\n  border-style: none;\n  resize: none;\n  overflow: hidden;\n}\n.content {\n  box-sizing: border-box;\n  height: 150px;\n  width: 100%;\n  padding: 5px 15px;\n  background: none;\n  outline: none;\n  border-style: none;\n  resize: none;\n  overflow: hidden;\n}\n\n.delbtn {\n  position: absolute;\n  top: 10px;\n  right: 10px;\n  width: 30px;\n  height: 30px;\n  cursor: pointer;\n}\n</style>\n\n\n\n"]},"metadata":{},"sourceType":"module"}